 {
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Run SDL App (Mac)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/sdl_app",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/src",
            "environment": [
                {
                    "name": "DYLD_LIBRARY_PATH",
                    "value": "/opt/homebrew/lib"
                }
            ],
            "externalConsole": true,
            "MIMode": "lldb",
            "preLaunchTask": "build SDL App (Mac)"
        },
        {
            "name": "Run SDL App (Windows)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe",
            "preLaunchTask": "C/C++: g++.exe build active file"
        }
    ]
}
